// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Xample {
  id        String   @id @unique
  user      String   @unique
  isDelete  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model User {
  id         String   @id @unique
  image      String?
  username   String
  email      String   @unique
  password   String
  notelp     String
  isVerif    Boolean  @default(false)
  otp        String?
  reportUser Report[]
  cctv       Cctv[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}

model Cctv {
  id           String   @id @unique
  idUser       String
  image        String?
  passwordUser String?
  userIp       String?
  ip           String   @unique
  path         String?
  lokasiCamera String
  isDelete     Boolean  @default(false)
  lokasi       Lokasi   @relation(fields: [lokasiCamera], references: [namaLokasi])
  user         User     @relation(fields: [idUser], references: [id])
  report       Report[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}

model Lokasi {
  id         String   @id @unique
  namaLokasi String   @unique
  cctv       Cctv[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}

model Report {
  id          String   @id @unique
  image       String
  ip          String
  nama        String
  lokasi      String
  lokasiRumah String
  userId      String
  cctv        Cctv     @relation(fields: [ip], references: [id])
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}
